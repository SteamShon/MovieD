<div class="row">
  <div class="span2"><%= link_to "<<", user_path(current_user),  { class: "pager" } %></div>
  <div class="span10"><h1><%= Tag.find(@tag_id).title %> by <%= current_user.name %></h1></div>
</div>

  <div class="row-fluid">

    <div class="span6">
      <%= render "search" %>
      <% for movie in @movies %>
        <div class="row">
          <div class="span3">
            <%= link_to movie.title, naver_movie_url(movie.title), target: "_blank" %>
          </div>
          <div class="span2" id="<%= movie.id %>">
            <%= link_to "Poster", movie, { remote: true } %>
          </div>
          <div class="span1">
            <%= render partial: "/rates/form", locals: { movie: movie } %>
          </div>
        </div>
      <% end %>

      <%= will_paginate @movies %>
      <br />
    </div>

    <div class="span6">
      <div class="user_rated">
        <p>Rated movies list</p>
        <%= render partial: "/rates/user_rated" %>
      </div>

      <div class="recs">
      </div>      
    </div>
  </div>
</div>
